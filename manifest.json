{
  "manifest_version": 3,
  "name": "Promptify",
  "description": "Refine and enhance your AI prompts instantly using Gemini Nano built-in AI.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Promptify"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "ai_service": {
    "model": "language"  
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
